<Page x:Class="LibraryManagementSystem.View.Pages.ManageMembersPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
x:Name="PageRoot"
Title="Manage Members"
Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#bdc3c7"/>
                    <Setter Property="Foreground" Value="#7f8c8d"/>
                    <Setter Property="Cursor" Value="No"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#95a5a6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7f8c8d"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#f39c12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e67e22"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#27ae60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#f5f5f5">
            <StackPanel Margin="30" MaxWidth="1400">
                <!-- Page Title Header (Shows "Manage Users" for Admins) -->
                <Border x:Name="pageHeaderBorder" Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                    </Border.Effect>
                    <TextBlock x:Name="txtPageTitle" Text="Manage Members" FontSize="24" FontWeight="Bold" Foreground="#2c3e50"/>
                </Border>

                <!-- MEMBERS SECTION -->
                <StackPanel x:Name="membersSectionContainer">
                    <!-- Members Section Header -->
                    <Border Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                        </Border.Effect>
                        <TextBlock Text="Manage Members" FontSize="24" FontWeight="Bold" Foreground="#2c3e50"/>
                    </Border>

                    <!-- Members Statistics Cards -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Members -->
                        <Border Grid.Column="0" Background="White" Padding="25" CornerRadius="10" Margin="0,0,10,0" BorderBrush="#3498db" BorderThickness="0,0,0,5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="txtTotalMembers" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Members" Foreground="#7f8c8d" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Active Members -->
                        <Border Grid.Column="1" Background="White" Padding="25" CornerRadius="10" Margin="5,0" BorderBrush="#27ae60" BorderThickness="0,0,0,5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="txtActiveMembers" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Active Members" Foreground="#7f8c8d" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Suspended Members -->
                        <Border Grid.Column="2" Background="White" Padding="25" CornerRadius="10" Margin="10,0,0,0" BorderBrush="#e74c3c" BorderThickness="0,0,0,5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="txtSuspendedMembers" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Suspended Members" Foreground="#7f8c8d" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Members Table -->
                    <Border Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,30">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                        </Border.Effect>
                        <StackPanel>
                            <DataGrid x:Name="dgMembers" 
                                      AutoGenerateColumns="False" 
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      Background="White"
                                      RowBackground="White"
                                      AlternatingRowBackground="#f8f9fa"
                                      BorderThickness="1"
                                      BorderBrush="#dee2e6"
                                      CanUserResizeRows="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Member ID" Binding="{Binding MemberId}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Consolas"/>
                                                <Setter Property="FontSize" Value="11"/>
                                                <Setter Property="Foreground" Value="#7f8c8d"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*" MinWidth="200"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" MinWidth="200"/>
                                    <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                                    <DataGridTextColumn Header="Membership Date" Binding="{Binding MembershipDateFormatted}" Width="140"/>
                                    
                                    <DataGridTemplateColumn Header="Status" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="5" Padding="8,4" Background="{Binding StatusBadgeBackground}">
                                                    <TextBlock Text="{Binding Status}" 
                                                               Foreground="{Binding StatusBadgeForeground}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Actions" Width="Auto" MinWidth="280">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                    <!-- View Button (Always visible) -->
                                                    <Button Content="View" 
                                                            Style="{StaticResource PrimaryButton}" 
                                                            Padding="12,6"
                                                            FontSize="13"
                                                            Margin="0,0,5,0"
                                                            Click="ViewMember_Click"
                                                            Tag="{Binding}"/>
                                                    
                                                    <!-- Admin-only buttons -->
                                                    <Button Content="✏️ Edit" 
                                                            Style="{StaticResource PrimaryButton}" 
                                                            Padding="12,6"
                                                            FontSize="13"
                                                            Margin="0,0,5,0"
                                                            Click="EditMember_Click"
                                                            Tag="{Binding}"
                                                            Visibility="{Binding AdminActionsVisibility}"/>
                                                    
                                                    <Button Content="{Binding SuspendButtonText}" 
                                                            Background="{Binding SuspendButtonBackground}"
                                                            Foreground="White"
                                                            Padding="12,6"
                                                            FontSize="13"
                                                            FontWeight="SemiBold"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Margin="0,0,5,0"
                                                            Click="ToggleSuspend_Click"
                                                            Tag="{Binding}"
                                                            Visibility="{Binding AdminActionsVisibility}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="5" 
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                    
                                                    <Button Content="🗑️ Delete" 
                                                            Style="{StaticResource DangerButton}" 
                                                            Padding="12,6"
                                                            FontSize="13"
                                                            Click="DeleteMember_Click"
                                                            Tag="{Binding}"
                                                            Visibility="{Binding AdminActionsVisibility}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#ecf0f1"/>
                                        <Setter Property="Foreground" Value="#2c3e50"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter Property="BorderBrush" Value="#bdc3c7"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#ecf0f1"/>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#f8f9fa"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- LIBRARIANS SECTION (Admin Only) -->
                <StackPanel x:Name="librariansSectionContainer" Visibility="Collapsed">
                    <!-- Librarians Section Header -->
                    <Border Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                        </Border.Effect>
                        <TextBlock Text="Manage Librarians" FontSize="24" FontWeight="Bold" Foreground="#2c3e50"/>
                    </Border>

                    <!-- Librarians Statistics Cards -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Librarians -->
                        <Border Grid.Column="0" Background="White" Padding="25" CornerRadius="10" Margin="0,0,10,0" BorderBrush="#9b59b6" BorderThickness="0,0,0,5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="txtTotalLibrarians" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Librarians" Foreground="#7f8c8d" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Active Librarians -->
                        <Border Grid.Column="1" Background="White" Padding="25" CornerRadius="10" Margin="5,0" BorderBrush="#27ae60" BorderThickness="0,0,0,5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="txtActiveLibrarians" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Active Librarians" Foreground="#7f8c8d" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Suspended Librarians -->
                        <Border Grid.Column="2" Background="White" Padding="25" CornerRadius="10" Margin="10,0,0,0" BorderBrush="#e74c3c" BorderThickness="0,0,0,5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="txtSuspendedLibrarians" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Suspended Librarians" Foreground="#7f8c8d" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Librarians Table -->
                    <Border Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,30">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                        </Border.Effect>
                        <StackPanel>
                            <DataGrid x:Name="dgLibrarians" 
                                      AutoGenerateColumns="False" 
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      Background="White"
                                      RowBackground="White"
                                      AlternatingRowBackground="#f8f9fa"
                                      BorderThickness="1"
                                      BorderBrush="#dee2e6"
                                      CanUserResizeRows="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Librarian ID" Binding="{Binding LibrarianId}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Consolas"/>
                                                <Setter Property="FontSize" Value="11"/>
                                                <Setter Property="Foreground" Value="#7f8c8d"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="120"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*" MinWidth="200"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" MinWidth="200"/>
                                    <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDateFormatted}" Width="120"/>
                                    
                                    <DataGridTemplateColumn Header="Status" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="5" Padding="8,4" Background="{Binding StatusBadgeBackground}">
                                                    <TextBlock Text="{Binding Status}" 
                                                               Foreground="{Binding StatusBadgeForeground}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Actions" Width="Auto" MinWidth="250">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                    <Button Content="View" 
                                                            Style="{StaticResource PrimaryButton}" 
                                                            Padding="12,6"
                                                            FontSize="13"
                                                            Margin="0,0,5,0"
                                                            Click="ViewLibrarian_Click"
                                                            Tag="{Binding}"/>
                                                    
                                                    <Button Content="{Binding SuspendButtonText}" 
                                                            Background="{Binding SuspendButtonBackground}"
                                                            Foreground="White"
                                                            Padding="12,6"
                                                            FontSize="13"
                                                            FontWeight="SemiBold"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Margin="0,0,5,0"
                                                            Click="ToggleSuspendLibrarian_Click"
                                                            Tag="{Binding}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="5" 
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                    
                                                    <Button Content="🗑️ Delete" 
                                                            Style="{StaticResource DangerButton}" 
                                                            Padding="12,6"
                                                            FontSize="13"
                                                            Click="DeleteLibrarian_Click"
                                                            Tag="{Binding}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#ecf0f1"/>
                                        <Setter Property="Foreground" Value="#2c3e50"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter Property="BorderBrush" Value="#bdc3c7"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#ecf0f1"/>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#f8f9fa"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ADMINS SECTION (Admin Only) -->
                <StackPanel x:Name="adminsSectionContainer" Visibility="Collapsed">
                    <!-- Admins Section Header -->
                    <Border Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                        </Border.Effect>
                        <TextBlock Text="Manage Admins" FontSize="24" FontWeight="Bold" Foreground="#2c3e50"/>
                    </Border>

                    <!-- Admins Statistics Cards -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Admins -->
                        <Border Grid.Column="0" Background="White" Padding="25" CornerRadius="10" Margin="0,0,10,0" BorderBrush="#e67e22" BorderThickness="0,0,0,5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="txtTotalAdmins" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Admins" Foreground="#7f8c8d" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Active Admins -->
                        <Border Grid.Column="1" Background="White" Padding="25" CornerRadius="10" Margin="5,0" BorderBrush="#27ae60" BorderThickness="0,0,0,5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="txtActiveAdmins" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Active Admins" Foreground="#7f8c8d" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Suspended Admins -->
                        <Border Grid.Column="2" Background="White" Padding="25" CornerRadius="10" Margin="10,0,0,0" BorderBrush="#e74c3c" BorderThickness="0,0,0,5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="txtSuspendedAdmins" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center"/>
                                <TextBlock Text="Suspended Admins" Foreground="#7f8c8d" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Admins Table -->
                    <Border Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,30">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                        </Border.Effect>
                        <StackPanel>
                            <DataGrid x:Name="dgAdmins" 
                                      AutoGenerateColumns="False" 
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      Background="White"
                                      RowBackground="White"
                                      AlternatingRowBackground="#f8f9fa"
                                      BorderThickness="1"
                                      BorderBrush="#dee2e6"
                                      CanUserResizeRows="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Admin ID" Binding="{Binding AdminId}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Consolas"/>
                                                <Setter Property="FontSize" Value="11"/>
                                                <Setter Property="Foreground" Value="#7f8c8d"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="120"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*" MinWidth="200"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" MinWidth="200"/>
                                    <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDateFormatted}" Width="120"/>
                                    
                                    <DataGridTemplateColumn Header="Status" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="5" Padding="8,4" Background="{Binding StatusBadgeBackground}">
                                                    <TextBlock Text="{Binding Status}" 
                                                               Foreground="{Binding StatusBadgeForeground}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Actions" Width="Auto" MinWidth="250">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                    <Button Content="View" 
                                                            Style="{StaticResource PrimaryButton}" 
                                                            Padding="12,6"
                                                            FontSize="13"
                                                            Margin="0,0,5,0"
                                                            Click="ViewAdmin_Click"
                                                            Tag="{Binding}"/>
                                                    
                                                    <Button Content="{Binding SuspendButtonText}" 
                                                            Background="{Binding SuspendButtonBackground}"
                                                            Foreground="White"
                                                            Padding="12,6"
                                                            FontSize="13"
                                                            FontWeight="SemiBold"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Margin="0,0,5,0"
                                                            Click="ToggleSuspendAdmin_Click"
                                                            Tag="{Binding}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="5" 
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                    
                                                    <Button Content="🗑️ Delete" 
                                                            Style="{StaticResource DangerButton}" 
                                                            Padding="12,6"
                                                            FontSize="13"
                                                            Click="DeleteAdmin_Click"
                                                            Tag="{Binding}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#ecf0f1"/>
                                        <Setter Property="Foreground" Value="#2c3e50"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter Property="BorderBrush" Value="#bdc3c7"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#ecf0f1"/>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#f8f9fa"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
