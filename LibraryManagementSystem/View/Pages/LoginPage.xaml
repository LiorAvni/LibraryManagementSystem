<Page x:Class="LibraryManagementSystem.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementSystem.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Login">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Login Form -->
        <Border Grid.Column="1" 
                Background="White" 
                BorderBrush="#2E3B4E" 
                BorderThickness="2" 
                CornerRadius="10" 
                Padding="40"
                VerticalAlignment="Center"
                Effect="{DynamicResource DropShadowEffect}">
            
            <StackPanel>
                <!-- Logo/Title -->
                <TextBlock Text="??" 
                          FontSize="60" 
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,20"/>
                
                <TextBlock Text="Library Management System" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Foreground="#2E3B4E"
                          Margin="0,0,0,10"/>
                
                <TextBlock Text="Please login to continue" 
                          FontSize="14" 
                          HorizontalAlignment="Center" 
                          Foreground="Gray"
                          Margin="0,0,0,30"/>

                <!-- Email -->
                <TextBlock Text="Email:" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" 
                        Height="35" 
                        FontSize="14"
                        Padding="10,7"
                        Margin="0,0,0,20"
                        Text="admin@library.com"/>

                <!-- Password -->
                <TextBlock Text="Password:" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                            Height="35" 
                            FontSize="14"
                            Padding="10,7"
                            Margin="0,0,0,10"
                            PasswordChanged="TxtPassword_PasswordChanged"/>

                <!-- Remember Me -->
                <CheckBox x:Name="chkRememberMe" 
                         Content="Remember Me" 
                         Margin="0,0,0,25"/>

                <!-- Login Button -->
                <Button x:Name="btnLogin" 
                       Content="Login" 
                       Height="40" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Background="#4CAF50" 
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="BtnLogin_Click"
                       Margin="0,0,0,15"/>

                <!-- Message -->
                <TextBlock x:Name="txtMessage" 
                          Text="" 
                          Foreground="Red" 
                          TextAlignment="Center"
                          TextWrapping="Wrap"
                          Visibility="Collapsed"/>

                <!-- Divider -->
                <Separator Margin="0,20,0,20"/>

                <!-- Register Link -->
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Don't have an account? "/>
                    <Hyperlink x:Name="lnkRegister" Click="LnkRegister_Click">
                        <Run Text="Register here"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
    
    <Page.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" 
                         BlurRadius="20" 
                         ShadowDepth="0" 
                         Color="Gray" 
                         Opacity="0.3"/>
    </Page.Resources>
</Page>
