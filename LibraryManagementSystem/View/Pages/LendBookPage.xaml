<Page x:Class="LibraryManagementSystem.View.Pages.LendBookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Lend Book to Member"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#28a745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6c757d"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5a6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#f5f5f5">
        <Grid MaxWidth="900" Margin="30">
            <!-- Book Info Card -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Book Information -->
            <Border Grid.Row="0" Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Lending Book" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,15"/>
                    <TextBlock Foreground="#7f8c8d" Margin="0,0,0,5">
                        <Run Text="Title: " FontWeight="SemiBold"/>
                        <Run x:Name="txtBookTitle" Text="N/A"/>
                    </TextBlock>
                    <TextBlock Foreground="#7f8c8d" Margin="0,0,0,5">
                        <Run Text="ISBN: " FontWeight="SemiBold"/>
                        <Run x:Name="txtISBN" Text="N/A"/>
                    </TextBlock>
                    <TextBlock Foreground="#7f8c8d">
                        <Run Text="Available Copies: " FontWeight="SemiBold"/>
                        <Run x:Name="txtAvailableCopies" Text="0"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Search Box -->
            <Border Grid.Row="1" Background="White" Padding="25" CornerRadius="10" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="txtSearch" 
                             Grid.Column="0"
                             Padding="12" 
                             FontSize="16" 
                             BorderBrush="#ddd" 
                             BorderThickness="1"
                             VerticalAlignment="Center"
                             KeyDown="TxtSearch_KeyDown">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Search member by first name or last name..." 
                                                                   Foreground="#999" 
                                                                   Margin="5,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <Button Grid.Column="1" 
                            Content="🔍 Search" 
                            Style="{StaticResource PrimaryButton}" 
                            Padding="24,12"
                            FontSize="16"
                            Margin="10,0,0,0"
                            Click="Search_Click"/>
                </Grid>
            </Border>

            <!-- Members List -->
            <Border Grid.Row="2" Background="White" Padding="30" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock x:Name="txtMembersTitle" 
                               Text="Select Member" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="#2c3e50" 
                               Margin="0,0,0,20"/>

                    <ItemsControl x:Name="icMembers">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#ecf0f1" BorderThickness="0,0,0,1" Padding="20,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="#2c3e50">
                                                <Run Text="{Binding FirstName}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding LastName}"/>
                                            </TextBlock>
                                            <TextBlock Foreground="#7f8c8d" FontSize="14" Margin="0,5,0,0">
                                                <Run Text="Email: " FontWeight="SemiBold"/>
                                                <Run Text="{Binding Email}"/>
                                            </TextBlock>
                                            <TextBlock Foreground="#7f8c8d" FontSize="14">
                                                <Run Text="Member ID: " FontWeight="SemiBold"/>
                                                <Run Text="{Binding MemberId}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <Button Grid.Column="1" 
                                                Content="📚 Lend Book" 
                                                Style="{StaticResource SuccessButton}" 
                                                Padding="20,10"
                                                Click="LendBook_Click"
                                                Tag="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- No Results Message -->
                    <TextBlock x:Name="txtNoResults" 
                               Text="No members found. Try a different search term." 
                               TextAlignment="Center" 
                               Padding="40" 
                               Foreground="#7f8c8d"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Back Button -->
            <StackPanel Grid.Row="3" Margin="0,20,0,0">
                <Button Content="🔙 Back to Manage Books" 
                        Style="{StaticResource SecondaryButton}" 
                        Padding="20,10"
                        HorizontalAlignment="Left"
                        Click="Back_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
