<Page x:Class="LibraryManagementSystem.View.Pages.ManageBooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Books"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#bdc3c7"/>
                    <Setter Property="Foreground" Value="#7f8c8d"/>
                    <Setter Property="Cursor" Value="No"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#27ae60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#95a5a6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7f8c8d"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Badge Styles -->
        <Style x:Key="BadgeAvailable" TargetType="Border">
            <Setter Property="Background" Value="#d4edda"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style x:Key="BadgeAvailableText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#155724"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="BadgeUnavailable" TargetType="Border">
            <Setter Property="Background" Value="#f8d7da"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style x:Key="BadgeUnavailableText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#721c24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="BadgeRetired" TargetType="Border">
            <Setter Property="Background" Value="#6c757d"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style x:Key="BadgeRetiredText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#f5f5f5">
            <Grid MaxWidth="1400" Margin="30,30,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

            <!-- Header Card -->
            <Border Grid.Row="0" Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Manage Books" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Foreground="#2c3e50"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1" 
                            Content="+ Add New Book" 
                            Style="{StaticResource SuccessButton}"
                            Click="AddNewBook_Click"
                            Padding="20,12"
                            FontSize="14"/>
                </Grid>
            </Border>

            <!-- Filter Section -->
            <Border Grid.Row="1" Background="White" Padding="25" CornerRadius="10" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Inputs -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Search (Title, Author, ISBN)" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtSearch" 
                                     Padding="10" 
                                     FontSize="14"
                                     Height="40"
                                     VerticalContentAlignment="Center"
                                     KeyDown="TxtSearch_KeyDown"/>
                        </StackPanel>

                        <!-- Category Filter -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Category" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2c3e50" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbCategory" 
                                      Padding="10" 
                                      FontSize="14"
                                      Height="40"
                                      VerticalContentAlignment="Center">
                                <ComboBoxItem Content="All Categories" IsSelected="True" Tag=""/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Filter Button -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,10,0">
                            <Button Content="?? Filter" 
                                    Style="{StaticResource PrimaryButton}"
                                    Click="Filter_Click"
                                    Height="40"
                                    Padding="20,10"/>
                        </StackPanel>

                        <!-- Clear Button -->
                        <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                            <Button Content="Clear" 
                                    Style="{StaticResource SecondaryButton}"
                                    Click="ClearFilters_Click"
                                    Height="40"
                                    Padding="20,10"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Books Table -->
            <Border Grid.Row="2" Background="White" Padding="30" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- DataGrid -->
                    <DataGrid x:Name="booksDataGrid" 
                              Grid.Row="0"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              Background="White"
                              RowBackground="White"
                              AlternatingRowBackground="#f8f9fa"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#ecf0f1"/>
                                <Setter Property="Foreground" Value="#2c3e50"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="12"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="#bdc3c7"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="12"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#e3f2fd"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="120"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" MinWidth="200"/>
                            <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="150"/>
                            <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="150"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                            <DataGridTextColumn Header="Copies" Binding="{Binding TotalCopies}" Width="70"/>
                            <DataGridTextColumn Header="Available" Binding="{Binding AvailableCopies}" Width="80"/>
                            
                            <!-- Status Column -->
                            <DataGridTemplateColumn Header="Status" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{Binding StatusBadgeStyle}">
                                            <TextBlock Text="{Binding StatusText}" Style="{Binding StatusTextStyle}"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Actions Column -->
                            <DataGridTemplateColumn Header="Actions" Width="300">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Edit" 
                                                    Style="{StaticResource SmallButton}"
                                                    Click="EditBook_Click"
                                                    Tag="{Binding}"
                                                    Margin="0,0,5,0"/>
                                            <Button Content="Retire" 
                                                    Style="{StaticResource SmallButton}"
                                                    Background="#e74c3c"
                                                    Click="RetireBook_Click"
                                                    Tag="{Binding}"
                                                    Margin="0,0,5,0">
                                                <Button.Triggers>
                                                    <EventTrigger RoutedEvent="Button.MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                                              To="#c0392b" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Button.Triggers>
                                            </Button>
                                            <Button Content="Lend" 
                                                    Style="{StaticResource SmallButton}"
                                                    Background="#27ae60"
                                                    Click="LendBook_Click"
                                                    Tag="{Binding}"
                                                    IsEnabled="{Binding IsAvailable}">
                                                <Button.Triggers>
                                                    <EventTrigger RoutedEvent="Button.MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                                              To="#229954" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Button.Triggers>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Pagination -->
                    <Border Grid.Row="1" 
                            x:Name="paginationPanel"
                            Background="#f8f9fa" 
                            Padding="15" 
                            CornerRadius="8" 
                            Margin="0,20,0,0"
                            Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       x:Name="txtPaginationInfo"
                                       Text="Page 1 of 1 (0 records)" 
                                       Foreground="#666" 
                                       FontSize="14"
                                       VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="btnFirstPage" 
                                        Content="First" 
                                        Style="{StaticResource SmallButton}"
                                        Click="FirstPage_Click"
                                        Margin="0,0,5,0"/>
                                <Button x:Name="btnPrevPage" 
                                        Content="Previous" 
                                        Style="{StaticResource SmallButton}"
                                        Click="PrevPage_Click"
                                        Margin="0,0,5,0"/>
                                <Button x:Name="btnNextPage" 
                                        Content="Next" 
                                        Style="{StaticResource SmallButton}"
                                        Click="NextPage_Click"
                                        Margin="0,0,5,0"/>
                                <Button x:Name="btnLastPage" 
                                        Content="Last" 
                                        Style="{StaticResource SmallButton}"
                                        Click="LastPage_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
    </Grid>
</Page>
