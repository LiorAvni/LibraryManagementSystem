<Page x:Class="LibraryManagementSystem.View.Pages.ManageLoansPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementSystem.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1400"
      Title="Manage Loans"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#bdc3c7"/>
                    <Setter Property="Foreground" Value="#7f8c8d"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#95a5a6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7f8c8d"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#27ae60"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Badge Styles -->
        <Style x:Key="BadgeActive" TargetType="Border">
            <Setter Property="Background" Value="#d4edda"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style x:Key="BadgeActiveText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#155724"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="BadgeOverdue" TargetType="Border">
            <Setter Property="Background" Value="#f8d7da"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style x:Key="BadgeOverdueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#721c24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="BadgeReturned" TargetType="Border">
            <Setter Property="Background" Value="#d1ecf1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style x:Key="BadgeReturnedText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#0c5460"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#f5f5f5">
        <Grid MaxWidth="1400" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Manage Loans" FontSize="24" FontWeight="Bold" Foreground="#2c3e50"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Total Records: " Foreground="#7f8c8d" FontSize="14"/>
                        <TextBlock x:Name="txtTotalRecords" Text="0" Foreground="#7f8c8d" FontSize="14" FontWeight="Bold"/>
                        <TextBlock Text="  |  " Foreground="#7f8c8d" FontSize="14" Margin="10,0"/>
                        <TextBlock Text="Page " Foreground="#7f8c8d" FontSize="14"/>
                        <TextBlock x:Name="txtCurrentPage" Text="1" Foreground="#7f8c8d" FontSize="14" FontWeight="Bold"/>
                        <TextBlock Text=" of " Foreground="#7f8c8d" FontSize="14"/>
                        <TextBlock x:Name="txtTotalPages" Text="1" Foreground="#7f8c8d" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Filter Section -->
            <Border Grid.Row="1" Background="White" Padding="25" CornerRadius="10" Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Member Name Filter -->
                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Member Name" FontSize="14" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMemberName" Height="40" Padding="10" FontSize="14" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Book Title Filter -->
                    <StackPanel Grid.Column="1" Margin="0,0,15,0">
                        <TextBlock Text="Book Title" FontSize="14" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtBookTitle" Height="40" Padding="10" FontSize="14" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Status Filter -->
                    <StackPanel Grid.Column="2" Margin="0,0,15,0">
                        <TextBlock Text="Status" FontSize="14" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbStatus" Height="40" Padding="10" FontSize="14" SelectedIndex="0">
                            <ComboBoxItem Content="All Statuses" Tag="ALL"/>
                            <ComboBoxItem Content="Active" Tag="ACTIVE"/>
                            <ComboBoxItem Content="Overdue" Tag="OVERDUE"/>
                            <ComboBoxItem Content="Returned" Tag="RETURNED"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Button Content="Filter" Style="{StaticResource PrimaryButton}" Click="Filter_Click" Margin="0,0,10,0"/>
                        <Button Content="Clear" Style="{StaticResource SecondaryButton}" Click="ClearFilters_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Table -->
            <Border Grid.Row="2" Background="White" Padding="30" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>
                <StackPanel>
                    <DataGrid x:Name="dgLoans" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              Background="White"
                              RowBackground="White"
                              AlternatingRowBackground="#f8f9fa"
                              BorderThickness="0"
                              CanUserResizeRows="False"
                              SelectionMode="Single"
                              MinHeight="400">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Member Name" Binding="{Binding MemberName}" Width="*" MinWidth="150"/>
                            <DataGridTextColumn Header="Book Title" Binding="{Binding BookTitle}" Width="*" MinWidth="200"/>
                            <DataGridTextColumn Header="Loan Date" Binding="{Binding LoanDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="120"/>
                            <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="120"/>
                            <DataGridTextColumn Header="Return Date" Binding="{Binding ReturnDateDisplay}" Width="120"/>
                            <DataGridTemplateColumn Header="Status" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="8,4" CornerRadius="5">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="ACTIVE">
                                                            <Setter Property="Background" Value="#d4edda"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="OVERDUE">
                                                            <Setter Property="Background" Value="#f8d7da"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="RETURNED">
                                                            <Setter Property="Background" Value="#d1ecf1"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="ACTIVE">
                                                                <Setter Property="Foreground" Value="#155724"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="OVERDUE">
                                                                <Setter Property="Foreground" Value="#721c24"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="RETURNED">
                                                                <Setter Property="Foreground" Value="#0c5460"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Fine Amount" Binding="{Binding FineAmount, StringFormat='${0:F2}'}" Width="110"/>
                            <DataGridTemplateColumn Header="Actions" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Return Book" 
                                                Style="{StaticResource SuccessButton}" 
                                                Click="ReturnBook_Click"
                                                Tag="{Binding}"
                                                Visibility="{Binding CanReturn, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#ecf0f1"/>
                                <Setter Property="Foreground" Value="#2c3e50"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="12"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="#bdc3c7"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#ecf0f1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#f8f9fa"/>
                                        <Setter Property="Foreground" Value="#2c3e50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>

                    <!-- Pagination -->
                    <Border x:Name="paginationSection" 
                            Background="#f8f9fa" 
                            Padding="15" 
                            CornerRadius="8" 
                            Margin="0,20,0,0"
                            Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       x:Name="txtPaginationInfo" 
                                       Text="Page 1 of 1 (0 records)" 
                                       Foreground="#666" 
                                       FontSize="14" 
                                       VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="btnFirst" Content="First" Style="{StaticResource SecondaryButton}" Padding="10,8" Margin="0,0,5,0" Click="FirstPage_Click"/>
                                <Button x:Name="btnPrevious" Content="Previous" Style="{StaticResource SecondaryButton}" Padding="10,8" Margin="0,0,5,0" Click="PreviousPage_Click"/>
                                <Button x:Name="btnNext" Content="Next" Style="{StaticResource SecondaryButton}" Padding="10,8" Margin="0,0,5,0" Click="NextPage_Click"/>
                                <Button x:Name="btnLast" Content="Last" Style="{StaticResource SecondaryButton}" Padding="10,8" Click="LastPage_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
    </Grid>
</Page>
