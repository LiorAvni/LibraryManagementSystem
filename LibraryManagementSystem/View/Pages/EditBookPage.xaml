<Page x:Class="LibraryManagementSystem.View.Pages.EditBookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Edit Book"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#95a5a6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7f8c8d"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#27ae60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#f5f5f5">
        <Grid MaxWidth="800" Margin="30">
            <Border Background="White" Padding="40" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Edit Book" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,20"/>

                    <!-- Book ID Info Box -->
                    <Border Background="#e8f4f8" Padding="15" CornerRadius="5" Margin="0,0,0,20" 
                            BorderBrush="#3498db" BorderThickness="0,0,0,4">
                        <TextBlock Foreground="#2c3e50">
                            <Run Text="Book ID: "/>
                            <Run x:Name="txtBookId" FontWeight="Bold" Text="N/A"/>
                        </TextBlock>
                    </Border>

                    <!-- Error Message -->
                    <Border x:Name="borderError" Background="#f8d7da" BorderBrush="#f5c6cb" BorderThickness="1" 
                            Padding="15" CornerRadius="5" Margin="0,0,0,20" Visibility="Collapsed">
                        <TextBlock x:Name="txtError" TextWrapping="Wrap" Foreground="#721c24"/>
                    </Border>

                    <!-- Success Message -->
                    <Border x:Name="borderSuccess" Background="#d4edda" BorderBrush="#c3e6cb" BorderThickness="1" 
                            Padding="15" CornerRadius="5" Margin="0,0,0,20" Visibility="Collapsed">
                        <TextBlock x:Name="txtSuccess" TextWrapping="Wrap" Foreground="#155724"/>
                    </Border>

                    <!-- ISBN -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="ISBN *" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtISBN" Padding="12" FontSize="14" BorderBrush="#ddd" BorderThickness="1"/>
                    </StackPanel>

                    <!-- Title -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Title *" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtTitle" Padding="12" FontSize="14" BorderBrush="#ddd" BorderThickness="1"/>
                    </StackPanel>

                    <!-- Publisher and Year -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Publisher -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Publisher" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8"/>
                            <ComboBox x:Name="cmbPublisher" Padding="12" FontSize="14" 
                                      DisplayMemberPath="name" SelectedValuePath="publisher_id"/>
                        </StackPanel>

                        <!-- Publication Year -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Publication Year" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtYear" Padding="12" FontSize="14" BorderBrush="#ddd" BorderThickness="1" Text="0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Category -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Category" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8"/>
                        <ComboBox x:Name="cmbCategory" Padding="12" FontSize="14" 
                                  DisplayMemberPath="name" SelectedValuePath="category_id"/>
                    </StackPanel>

                    <!-- Authors -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Authors" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8"/>
                        <ListBox x:Name="lstAuthors" Height="150" SelectionMode="Multiple" 
                                 DisplayMemberPath="full_name" SelectedValuePath="author_id"
                                 BorderBrush="#ddd" BorderThickness="1"/>
                        <TextBlock Text="Hold Ctrl to select multiple authors" FontSize="11" 
                                   Foreground="#7f8c8d" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Margin="0,0,0,30">
                        <TextBlock Text="Description" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtDescription" Padding="12" FontSize="14" BorderBrush="#ddd" 
                                 BorderThickness="1" TextWrapping="Wrap" AcceptsReturn="True" 
                                 Height="100" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                        <Button Content="Update Book" Style="{StaticResource PrimaryButton}" 
                                Padding="24,12" Click="UpdateBook_Click"/>
                        <Button Content="Cancel" Style="{StaticResource SecondaryButton}" 
                                Padding="24,12" Margin="10,0,0,0" Click="Cancel_Click"/>
                    </StackPanel>

                    <!-- Manage Book Copies Section -->
                    <Border BorderBrush="#e0e0e0" BorderThickness="0,2,0,0" Padding="0,30,0,0">
                        <StackPanel>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Manage Book Copies" FontSize="20" FontWeight="SemiBold" Foreground="#2c3e50"/>
                                <Button Grid.Column="1" Content="+ Add New Copy" Style="{StaticResource SuccessButton}" 
                                        Padding="16,8" Click="AddCopy_Click"/>
                            </Grid>

                            <DataGrid x:Name="dgCopies" 
                                      AutoGenerateColumns="False" 
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      Background="White"
                                      RowBackground="White"
                                      AlternatingRowBackground="#f8f9fa"
                                      BorderThickness="1"
                                      BorderBrush="#dee2e6"
                                      CanUserResizeRows="False"
                                      CanUserAddRows="False"
                                      SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Copy #" Binding="{Binding CopyNumber}" Width="70" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Copy ID" Binding="{Binding CopyId}" Width="*" MinWidth="120" IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Consolas"/>
                                                <Setter Property="FontSize" Value="11"/>
                                                <Setter Property="Foreground" Value="#7f8c8d"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    
                                    <DataGridTemplateColumn Header="Status" Width="200">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <ComboBox ItemsSource="{Binding StatusOptions}" 
                                                              SelectedValue="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                              SelectedValuePath="Value"
                                                              DisplayMemberPath="Value"
                                                              IsEnabled="{Binding CanEditStatus}"
                                                              Padding="8" FontSize="14">
                                                        <ComboBox.ItemContainerStyle>
                                                            <Style TargetType="ComboBoxItem">
                                                                <Setter Property="IsEnabled" Value="{Binding IsEnabled}"/>
                                                            </Style>
                                                        </ComboBox.ItemContainerStyle>
                                                    </ComboBox>
                                                    <TextBlock Text="Status locked (book is in use)" 
                                                               FontSize="11" Foreground="#ff9800" 
                                                               Margin="0,3,0,0"
                                                               Visibility="{Binding StatusLockedVisibility}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    
                                    <DataGridTemplateColumn Header="Condition" Width="180">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding ConditionOptions}" 
                                                          SelectedItem="{Binding Condition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                          Padding="8" FontSize="14"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    
                                    <DataGridTemplateColumn Header="Location" Width="140">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Location, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                         Padding="8" FontSize="14" BorderBrush="#ddd" BorderThickness="1"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    
                                    <DataGridTemplateColumn Header="Action" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Save" 
                                                        Style="{StaticResource PrimaryButton}" 
                                                        Padding="12,6"
                                                        FontSize="13"
                                                        Click="SaveCopy_Click"
                                                        Tag="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                                
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#f8f9fa"/>
                                        <Setter Property="Foreground" Value="#2c3e50"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter Property="BorderBrush" Value="#dee2e6"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#dee2e6"/>
                                    </Style>
                                </DataGrid.CellStyle>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
