<Page x:Class="LibraryManagementSystem.View.Pages.EditLibrarianPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Edit Librarian"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#95a5a6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7f8c8d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#f5f5f5">
            <Grid MaxWidth="800" Margin="30">
                <Border Background="White" Padding="40" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Edit Librarian Information" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,25"/>

                        <!-- Info Box -->
                        <Border Background="#e8f4f8" Padding="15" CornerRadius="5" Margin="0,0,0,25" BorderBrush="#3498db" BorderThickness="0,0,0,4">
                            <StackPanel>
                                <TextBlock Foreground="#2c3e50" Margin="0,0,0,5">
                                    <Run Text="Librarian ID: " FontWeight="SemiBold"/>
                                    <Run x:Name="txtInfoLibrarianId" Text="N/A"/>
                                </TextBlock>
                                <TextBlock Foreground="#2c3e50" Margin="0,0,0,5">
                                    <Run Text="User ID: " FontWeight="SemiBold"/>
                                    <Run x:Name="txtInfoUserId" Text="N/A"/>
                                </TextBlock>
                                <TextBlock Foreground="#2c3e50" Margin="0,0,0,5">
                                    <Run Text="Employee ID: " FontWeight="SemiBold"/>
                                    <Run x:Name="txtInfoEmployeeId" Text="N/A"/>
                                </TextBlock>
                                <TextBlock Foreground="#2c3e50">
                                    <Run Text="Hire Date: " FontWeight="SemiBold"/>
                                    <Run x:Name="txtInfoHireDate" Text="N/A"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Error/Success Messages -->
                        <Border x:Name="borderError" Background="#f8d7da" BorderBrush="#f5c6cb" BorderThickness="1" 
                                Padding="15" CornerRadius="5" Margin="0,0,0,20" Visibility="Collapsed">
                            <TextBlock x:Name="txtError" TextWrapping="Wrap" Foreground="#721c24"/>
                        </Border>

                        <Border x:Name="borderSuccess" Background="#d4edda" BorderBrush="#c3e6cb" BorderThickness="1" 
                                Padding="15" CornerRadius="5" Margin="0,0,0,20" Visibility="Collapsed">
                            <TextBlock x:Name="txtSuccess" TextWrapping="Wrap" Foreground="#155724"/>
                        </Border>

                        <!-- Form Fields -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- First Name -->
                            <StackPanel Grid.Column="0" Margin="0,0,0,20">
                                <TextBlock FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8">
                                    <Run Text="First Name "/>
                                    <Run Text="*" Foreground="#e74c3c"/>
                                </TextBlock>
                                <TextBox x:Name="txtFirstName" Padding="10" FontSize="14" BorderBrush="#ddd" BorderThickness="1"/>
                            </StackPanel>

                            <!-- Last Name -->
                            <StackPanel Grid.Column="2" Margin="0,0,0,20">
                                <TextBlock FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8">
                                    <Run Text="Last Name "/>
                                    <Run Text="*" Foreground="#e74c3c"/>
                                </TextBlock>
                                <TextBox x:Name="txtLastName" Padding="10" FontSize="14" BorderBrush="#ddd" BorderThickness="1"/>
                            </StackPanel>
                        </Grid>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8">
                                <Run Text="Email "/>
                                <Run Text="*" Foreground="#e74c3c"/>
                            </TextBlock>
                            <TextBox x:Name="txtEmail" Padding="10" FontSize="14" BorderBrush="#ddd" BorderThickness="1"/>
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Phone" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPhone" Padding="10" FontSize="14" BorderBrush="#ddd" BorderThickness="1"/>
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Address" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtAddress" Padding="10" FontSize="14" BorderBrush="#ddd" BorderThickness="1" 
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="80" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Librarian Status -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,8">
                                <Run Text="Librarian Status "/>
                                <Run Text="*" Foreground="#e74c3c"/>
                            </TextBlock>
                            <ComboBox x:Name="cmbLibrarianStatus" Padding="10" FontSize="14">
                                <ComboBoxItem Content="ACTIVE" IsSelected="True"/>
                                <ComboBoxItem Content="SUSPENDED"/>
                                <ComboBoxItem Content="EXPIRED"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="💾 Save Changes" 
                                    Style="{StaticResource PrimaryButton}" 
                                    Padding="25,12"
                                    Click="SaveChanges_Click"/>
                            <Button Content="Cancel" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Padding="25,12"
                                    Margin="10,0,0,0"
                                    Click="Cancel_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
