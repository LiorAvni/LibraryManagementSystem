<Page x:Class="LibraryManagementSystem.View.Pages.ManageReservationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementSystem.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1400"
      Title="Manage Reservations"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#bdc3c7"/>
                    <Setter Property="Foreground" Value="#7f8c8d"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#28a745"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#dc3545"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#f5f5f5">
            <Grid MaxWidth="1400" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="White" Padding="30" CornerRadius="10" Margin="0,0,0,30">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                    </Border.Effect>
                    <TextBlock Text="Manage Reservations" FontSize="24" FontWeight="Bold" Foreground="#2c3e50"/>
                </Border>

                <!-- Table -->
                <Border Grid.Row="1" Background="White" Padding="30" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                    </Border.Effect>
                    <DataGrid x:Name="dgReservations" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              Background="White"
                              RowBackground="White"
                              AlternatingRowBackground="#f8f9fa"
                              BorderThickness="0"
                              CanUserResizeRows="False"
                              SelectionMode="Single"
                              MinHeight="400">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Book Title" Binding="{Binding BookTitle}" Width="*" MinWidth="200"/>
                            <DataGridTextColumn Header="Reserved By" Binding="{Binding MemberName}" Width="150"/>
                            <DataGridTextColumn Header="Reservation Date" Binding="{Binding ReservationDate, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="150"/>
                            <DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="150"/>
                            
                            <!-- Status Column -->
                            <DataGridTemplateColumn Header="Status" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="8,4" CornerRadius="5">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="PENDING">
                                                            <Setter Property="Background" Value="#fff3cd"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="AVAILABLE">
                                                            <Setter Property="Background" Value="#cfe2ff"/>
                                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="RESERVED">
                                            <Setter Property="Background" Value="#d1ecf1"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="FULFILLED">
                                                            <Setter Property="Background" Value="#d4edda"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="CANCELLED">
                                                            <Setter Property="Background" Value="#f8d7da"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="EXPIRED">
                                                            <Setter Property="Background" Value="#e2e3e5"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="PENDING">
                                                                <Setter Property="Foreground" Value="#856404"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="AVAILABLE">
                                                                <Setter Property="Foreground" Value="#084298"/>
                                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="RESERVED">
                                                <Setter Property="Foreground" Value="#0c5460"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="FULFILLED">
                                                                <Setter Property="Foreground" Value="#155724"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="CANCELLED">
                                                                <Setter Property="Foreground" Value="#721c24"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="EXPIRED">
                                                                <Setter Property="Foreground" Value="#383d41"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Actions Column -->
                            <DataGridTemplateColumn Header="Action" Width="220">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <!-- PENDING: Approve (green) + Cancel (red) -->
                                            <Button Content="✅ Approve" 
                                                    Style="{StaticResource SuccessButton}" 
                                                    Click="ApproveReservation_Click"
                                                    Tag="{Binding}"
                                                    Visibility="{Binding CanApprove, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Margin="0,0,5,0"/>
                                            
                                            <Button Content="❌ Cancel" 
                                                    Style="{StaticResource DangerButton}" 
                                                    Click="CancelReservation_Click"
                                                    Tag="{Binding}"
                                                    Visibility="{Binding CanCancelPending, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            
                                            <!-- RESERVED: Dis-Approve (red) + Cancel (red) -->
                                            <Button Content="⏸️ Dis-Approve" 
                                                    Style="{StaticResource DangerButton}" 
                                                    Click="DisApproveReservation_Click"
                                                    Tag="{Binding}"
                                                    Visibility="{Binding CanDisApprove, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Margin="0,0,5,0"/>
                                            
                                            <Button Content="❌ Cancel" 
                                                    Style="{StaticResource DangerButton}" 
                                                    Click="CancelReservation_Click"
                                                    Tag="{Binding}"
                                                    Visibility="{Binding CanCancelReserved, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#ecf0f1"/>
                                <Setter Property="Foreground" Value="#2c3e50"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="12"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="#bdc3c7"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#ecf0f1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#f8f9fa"/>
                                        <Setter Property="Foreground" Value="#2c3e50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
