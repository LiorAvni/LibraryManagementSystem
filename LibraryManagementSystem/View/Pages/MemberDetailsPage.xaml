<Page x:Class="LibraryManagementSystem.View.Pages.MemberDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Member Details"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Button Styles -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#95a5a6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7f8c8d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Menu -->
        <Border Grid.Row="0" Background="#34495e" Padding="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnNavDashboard" 
                        Content="? Dashboard" 
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0,0,0,3"
                        BorderBrush="Transparent"
                        Padding="20,12"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Cursor="Hand"
                        Click="NavDashboard_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3d4f63"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="btnNavMembers" 
                        Content="Members" 
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0,0,0,3"
                        BorderBrush="#3498db"
                        Padding="20,12"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Cursor="Hand"
                        Click="NavMembers_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3d4f63"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#f5f5f5">
            <Grid MaxWidth="1000" Margin="30">
                <Border Background="White" Padding="30" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Member Details" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,20" Padding="0,0,0,10"/>
                        <Border BorderBrush="#ecf0f1" BorderThickness="0,0,0,2" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Member ID -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,15">
                                <TextBlock Text="Member ID" Foreground="#7f8c8d" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtMemberId" Text="N/A" Foreground="#2c3e50" FontSize="16"/>
                            </StackPanel>

                            <!-- Status -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                                <TextBlock Text="Status" Foreground="#7f8c8d" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <Border x:Name="borderStatus" CornerRadius="5" Padding="8,4" HorizontalAlignment="Left">
                                    <TextBlock x:Name="txtStatus" Text="ACTIVE" FontWeight="SemiBold" FontSize="14"/>
                                </Border>
                            </StackPanel>

                            <!-- Full Name -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,20,15">
                                <TextBlock Text="Full Name" Foreground="#7f8c8d" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtFullName" Text="N/A" Foreground="#2c3e50" FontSize="16"/>
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,15">
                                <TextBlock Text="Email" Foreground="#7f8c8d" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtEmail" Text="N/A" Foreground="#2c3e50" FontSize="16"/>
                            </StackPanel>

                            <!-- Phone -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,20,15">
                                <TextBlock Text="Phone" Foreground="#7f8c8d" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtPhone" Text="N/A" Foreground="#2c3e50" FontSize="16"/>
                            </StackPanel>

                            <!-- Address -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,15">
                                <TextBlock Text="Address" Foreground="#7f8c8d" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtAddress" Text="N/A" Foreground="#2c3e50" FontSize="16" TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Membership Date -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,20,15">
                                <TextBlock Text="Membership Date" Foreground="#7f8c8d" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtMembershipDate" Text="N/A" Foreground="#2c3e50" FontSize="16"/>
                            </StackPanel>

                            <!-- User ID -->
                            <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,15">
                                <TextBlock Text="User ID" Foreground="#7f8c8d" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtUserId" Text="N/A" Foreground="#2c3e50" FontSize="16"/>
                            </StackPanel>
                        </Grid>

                        <Button Content="? Back to Members" 
                                Style="{StaticResource SecondaryButton}" 
                                Margin="0,20,0,0"
                                Click="BackToMembers_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
